<div class="well well-lg well-devise">

      <h1>Admin</h1>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
          <div class="alert alert-danger fade in">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <ul>
               <% resource.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
               <% end %>
            </ul>
         </div>
        <% end %>

      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: 'Email', :autofocus => true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: 'Password' %>
      </div>

      <div class="form-group">
        <%= f.button "Sign in", class: "btn btn-success btn-lg btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing in..."} %>
      </div>
    <% end %>

    <p class="text-center">
      <%= render "devise/shared/links" %>
    </p>
</div>


